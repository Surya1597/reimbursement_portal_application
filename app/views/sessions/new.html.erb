<div class="row justify-content-center">
  <div class="col-md-6 col-lg-4">
    <div class="card shadow-sm">
      <div class="card-body p-4">
        <h1 class="h4 mb-4 text-center">Welcome back</h1>
        <%= form_with url: login_sessions_path, local: true, data: { turbo: false } do |form| %>
          <div class="mb-3">
            <%= form.label :email, class: "form-label" %>
            <%= form.email_field :email, class: "form-control", autofocus: true, required: true %>
          </div>

          <div class="mb-3">
            <%= form.label :password, class: "form-label" %>
            <%= form.password_field :password, class: "form-control", required: true %>
          </div>

          <%= form.submit "Login", class: "btn btn-primary w-100" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
